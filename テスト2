mkdir -p .github/workflows
cat > .github/workflows/check-python.yml <<'EOF'
name: Check Python on macOS

on:
  push:
    branches:
      - main
      - master
  workflow_dispatch:

jobs:
  check-python:
    runs-on: macos-latest
    steps:
      - name: Checkout repository
        uses: actions/checkout@v4

      - name: Show python3 location and version
        run: |
          echo "which python3:"
          which python3 || true
          echo
          echo "python3 --version:"
          python3 --version || true

      - name: List script and run it (capture exit code)
        run: |
          echo "ls -l テスト || true"
          ls -l テスト || true
          echo "Making テスト executable and running it..."
          chmod +x テスト || true
          ./テスト || echo "script exited with code $?"
        shell: bash
EOF

git add .github/workflows/check-python.yml
git commit -m "Add workflow: check Python version and run テスト on macOS"
git push origin YOUR_BRANCH_NAME
